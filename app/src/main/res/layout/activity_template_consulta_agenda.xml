<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardElevation="@dimen/cardElevation"
    card_view:contentPaddingBottom="@dimen/contentPaddingBottom"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp">

        <TextView
            app:layout_heightPercent="100%"
            android:layout_width="wrap_content"
            android:id="@+id/textoHora"
            android:textSize="22sp"
            android:paddingTop="25dp"
            android:paddingLeft="6dp"
            android:fontFamily="sans-serif-light"
            android:text="00:00"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/textoHora"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingLeft="6dp"
                android:id="@+id/textNomePaciente"
                android:fontFamily="sans-serif-light"
                android:text="Paciente:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textTipoConsulta"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:paddingLeft="6dp"
                android:fontFamily="sans-serif-light"
                android:text="Tipo de Consulta:"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout ></android.support.v7.widget.CardView>