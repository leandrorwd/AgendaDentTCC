<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="@dimen/cardElevation"
        card_view:contentPaddingBottom="@dimen/contentPaddingBottom"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textoDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="6dp"
                android:layout_marginRight="48dp"
                android:text="@string/horario_de_inicio"
                />
            <TextView
                android:id="@+id/textoHorario"
                android:layout_width="wrap_content"
                android:layout_below="@+id/textoDias"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:text="00:00"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/botaoInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

