<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?android:selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    card_view:cardBackgroundColor="@color/background_material_light"
    android:focusable="true"
    card_view:cardElevation="@dimen/cardElevation"
    card_view:contentPaddingBottom="@dimen/contentPaddingBottom"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp">

        <TextView
            app:layout_heightPercent="100%"
            android:layout_width="wrap_content"
            android:id="@+id/textoHora"
            android:textSize="22sp"
            android:paddingTop="25dp"
            android:paddingLeft="6dp"
            android:fontFamily="sans-serif-light"
            android:text="00:00"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textTipoConsulta"
            android:textSize="22sp"
            android:paddingTop="25dp"
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/textoHora"
            android:fontFamily="sans-serif-light"
            android:text="Livre"
            android:layout_height="wrap_content" />

    </android.support.percent.PercentRelativeLayout ></android.support.v7.widget.CardView>