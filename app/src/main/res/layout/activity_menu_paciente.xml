<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_paciente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tcc.agendadent.gui.paciente.MenuPaciente">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTextPesquisa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.02"
            android:gravity="center_vertical"
            android:text="Pesquisa"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEmailLoginExterno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/idNomeDentista"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-light"
                android:hint="Nome Dentista"
                android:inputType="textPersonName"
                android:textColor="@android:color/darker_gray" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/idTextPlanoSaude"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Plano de Saúde"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextEspecialidade"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Especialidade"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerEspecialidade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextBuscaEstado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.59"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Estado"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerBuscaEstado"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextBuscaCidade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Cidade"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerBuscaCidade"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextBuscaDistancia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Distância"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarBuscaDistancia"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:max="5"
                android:progress="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:background="@color/corBotao"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:text="@string/buscar"
                android:textColor="@color/backgroundWhite" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
